<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"

        tools:context=".registration.RegisterFragment">

        <TextView
            android:id="@+id/tv_register_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/register_a_new_account"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_register_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/ubuntu"
            android:paddingStart="@dimen/_50sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:text="@string/create_account_to_start_your_first_plan_with_time2travel"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_Title" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_register_first_name"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/edit_text_layout"
            android:elevation="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_light_italic"
            android:hint="@string/first_name"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_register_sub_title"

            />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_register_last_name"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/edit_text_layout"
            android:elevation="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_light_italic"
            android:hint="@string/last_name"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_register_first_name"

            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_register_email"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/edit_text_layout"
            android:elevation="@dimen/_3sdp"
            android:fontFamily="@font/ubuntu_light_italic"
            android:hint="@string/email_address"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_register_last_name"

            />

        <LinearLayout
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_35sdp"
            android:id="@+id/linear_phone_number"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:elevation="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_register_email">


            <com.hbb20.CountryCodePicker
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:id="@+id/tv_country_code"
                android:gravity="center"
                android:elevation="@dimen/_3sdp"

                app:ccp_textSize="@dimen/_10sdp"
                app:ccp_autoDetectCountry="true"
                app:ccp_showNameCode="false"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/phone_key_layout"

                />

            <EditText
                android:id="@+id/tv_phone_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:maxLength="9"
                android:hint="  phone number"
                android:textSize="@dimen/_10sdp"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_5sdp"

                android:inputType="phone"
                android:background="@drawable/phone_number_layout"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:id="@+id/linear_register_password"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/edit_text_layout"
            android:elevation="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/_10sdp"
            android:weightSum="5"
            app:layout_constraintTop_toBottomOf="@id/linear_phone_number">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_register_password"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="@font/ubuntu_light_italic"
                android:hint="@string/password"
                android:textSize="@dimen/_10sdp"
                android:background="@null"


                />

            <ImageView
                android:id="@+id/img_hide_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hide_password_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:id="@+id/linear_register_repeat_password"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/edit_text_layout"
            android:elevation="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/_10sdp"
            android:weightSum="5"
            app:layout_constraintTop_toBottomOf="@id/linear_register_password">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_register_repeat_password"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="@font/ubuntu_light_italic"
                android:hint="@string/repeat_password"
                android:textSize="@dimen/_10sdp"
                android:background="@null"


                />

            <ImageView
                android:id="@+id/img_hide_repeat_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hide_password_icon"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_account"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_20sdp"
           android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/linear_register_repeat_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_third_color_layout"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/create_account"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/tv_login_social"
            android:fontFamily="@font/ubuntu"
            android:text="@string/or_you_can_login_with_one_of_your_accounts"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@id/btn_create_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/linear_social_icons"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_login_social"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_2sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_apple"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_30sdp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/apple_register_icon"


                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_gmail"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_30sdp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/gmail_register"


                    />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_facebook"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_30sdp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/facebook_icon"


                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_getting_started_you_acknowledge_and_agree_to_terms_of_use_and_privacy_policy"
            android:fontFamily="@font/ubuntu_light_italic"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_50sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:textColor="@color/app_second_color_light"
            android:textSize="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@+id/linear_social_icons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>