<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/vCoordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="#6AAEFF">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/flying_paper_plane"
                app:lottie_loop="true"
                app:lottie_speed="1"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/_10sdp" />


        </LinearLayout>


        <!--    style="@style/Widget.Design.BottomSheet.Modal"-->

        <LinearLayout
            android:id="@+id/vBSBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linear_fragment_confirm_flight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/tab_layout_gray"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tv_flight_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="@string/flight_details"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/app_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        />

                    <ImageView
                        android:id="@+id/tv_exit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/exite_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"


                        />

                    <TextView
                        android:id="@+id/tv_flight_to_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Flight to Jeddah"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/app_second_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_flight_details"


                        />

                    <TextView
                        android:id="@+id/tv_flight_stop_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:text="1 stop - 5h 35m"
                        android:textColor="@color/app_second_color"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_flight_to_country" />
                    ///////////////////////////////////////////////////////////////////////////

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_flight_stop_hour"
                        android:weightSum="14"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/linear_flight2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/circle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:src="@drawable/circle_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_flight_stop_hour" />

                            <ImageView
                                android:id="@+id/vertical_line1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/vertical_line"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/circle1" />

                            <ImageView
                                android:id="@+id/circle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:src="@drawable/circle_icon"
                                app:layout_constraintStart_toStartOf="parent"

                                app:layout_constraintTop_toBottomOf="@+id/vertical_line1" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="7">

                            <TextView
                                android:id="@+id/tv_time_start_part1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/ubuntu_light"
                                android:gravity="center"
                                android:text="Sun 20 Nov • 11:35 PM"
                                android:textColor="@color/app_second_color"
                                android:textSize="@dimen/_10sdp"
                                app:layout_constraintStart_toEndOf="@id/circle1"
                                app:layout_constraintTop_toBottomOf="@id/tv_flight_stop_hour"


                                />


                            <TextView
                                android:id="@+id/tv_pickup_country_part1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:gravity="center"
                                android:text="DXB • Dubai"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/_10sdp"
                                app:layout_constraintStart_toEndOf="@id/circle1"
                                app:layout_constraintTop_toBottomOf="@id/tv_time_start_part1"


                                />


                            <TextView
                                android:id="@+id/tv_time_end_part1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/ubuntu_light"
                                android:gravity="center"
                                android:text="Sun 20 Nov • 11:59 PM"
                                android:textColor="@color/app_second_color"
                                android:textSize="@dimen/_10sdp"
                                app:layout_constraintStart_toEndOf="@+id/circle2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_pickup_country_part1" />

                            <TextView
                                android:id="@+id/tv_country_drop_off"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:gravity="center"
                                android:text="BAH • Bahrain"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/_10sdp"
                                app:layout_constraintStart_toEndOf="@+id/circle2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_time_end_part1" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linear_flight_class_details"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_time_start_part1">

                            <ImageView
                                android:id="@+id/airport_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/flight_from_award"
                                android:layout_marginEnd="@dimen/_9sdp"
                                android:layout_gravity="center"


                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_airport_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="Gulf Air GF513"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_9sdp" />


                                <TextView
                                    android:id="@+id/tv_ticket_num_class"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="Gulf Air GF513"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_9sdp" />

                                <TextView
                                    android:id="@+id/tv_flight_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="Flight time 1h 24m"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_9sdp" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                    /////////////////////////////////////////////////////////////////////////////


                    <LinearLayout
                        android:id="@+id/linear_layover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear_flight2">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/gray"
                            android:src="@drawable/dotted_line_gray"


                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/clock_hour_minute_second_time_icon"

                                />

                            <TextView
                                android:id="@+id/tv_layover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/ubuntu_light_italic"
                                android:text="Layover 1h 36m"
                                android:textColor="@color/app_second_color"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_part2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="14"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear_layover">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/circle1_part2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:src="@drawable/circle_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_flight_stop_hour" />

                            <ImageView
                                android:id="@+id/vertical_line2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/vertical_line"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/circle1" />

                            <ImageView
                                android:id="@+id/circle2_part2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:src="@drawable/circle_icon"
                                app:layout_constraintStart_toStartOf="parent"

                                app:layout_constraintTop_toBottomOf="@+id/vertical_line1" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_time_start_part2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/ubuntu_light"
                                android:gravity="center"
                                android:text="Mon 21 Nov • 1:35 AM"
                                android:textColor="@color/app_second_color"
                                android:textSize="@dimen/_10sdp"


                                />

                            <TextView
                                android:id="@+id/tv_pickup_country_part2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:gravity="center"
                                android:text="BAH • Bahrian"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/_10sdp"


                                />

                            <TextView
                                android:id="@+id/tv_time_end_part2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/ubuntu_light"
                                android:gravity="center"
                                android:text="Mon 21 Nov • 4:10 AM"
                                android:textColor="@color/app_second_color"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:id="@+id/tv_country_drop_off_part2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:gravity="center"
                                android:text="JED • Jeddah"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_flight_class_details_part2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_time_start_part1">

                            <ImageView
                                android:id="@+id/airport_logo_part2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/flight_from_award"
                                android:layout_margin="@dimen/_5sdp"


                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_airport_name_part2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="Gulf Air GF513"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_9sdp" />


                                <TextView
                                    android:id="@+id/tv_ticket_num_class_part2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="Gulf Air GF513"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_9sdp" />

                                <TextView
                                    android:id="@+id/tv_flight_time_part2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="Flight time 1h 24m"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_9sdp" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_included_baggage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/linear_part2">

                        <TextView
                            android:id="@+id/tv_Included_baggage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/included_baggage"
                            android:textColor="@color/app_second_color"
                            android:textSize="@dimen/_12sdp"


                            />

                        <TextView
                            android:id="@+id/tv_total_Included_baggage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_light_italic"
                            android:text="@string/the_total_baggage_included_in_the_price"
                            android:textColor="@color/app_second_color"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_8sdp"


                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:weightSum="15"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/suitcase_solid" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="11"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/tv_personal_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text=" 1 person item"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_11sdp"


                                    />

                                <TextView
                                    android:id="@+id/tv_personal_item_gide"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu_light_italic"
                                    android:text=" must go under the seat in front of you"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_10sdp"


                                    />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_personal_included"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="@string/included"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="center"


                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:weightSum="15"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/suitcase_rolling_solid" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="11"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/tv_carry_on_bag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="1 carry-on bag"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_11sdp"


                                    />

                                <TextView
                                    android:id="@+id/tv_max_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu_light_italic"
                                    android:text=" max weight 6 kg"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_11sdp"


                                    />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_bag_included"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="@string/included"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/_12sdp"


                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:weightSum="15"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/cart_flatbed_suitcase_solid" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="11"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/tv_checked_bag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu"
                                    android:text="1 checked bag"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_11sdp"


                                    />

                                <TextView
                                    android:id="@+id/tv_max_weight_checked"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ubuntu_light_italic"
                                    android:text=" max weight 23 kg"
                                    android:textColor="@color/app_second_color"
                                    android:textSize="@dimen/_11sdp"


                                    />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_bag_included_checked"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="@string/included"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/_12sdp"


                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rewards"
                            android:textColor="@color/button_third_color"
                            android:fontFamily="@font/ubuntu_bold"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginBottom="@dimen/_5sdp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:id="@+id/rewards"
                            android:background="@color/app_color"


                            />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:textColor="@color/app_second_color"


                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:id="@+id/tv_ticket_1_adult"
