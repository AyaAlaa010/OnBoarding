<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/gray"
        tools:context=".registration.LoginRegisterActivity">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_margin="@dimen/_20sdp"
                android:src="@drawable/arrow_back_left_previous_icon"
                app:civ_border_color="@color/app_second_color"
                app:civ_border_width="@dimen/_2sdp" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_20ssp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="@dimen/_3sdp"

            >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView_login_register"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:navGraph="@navigation/login_register_graph"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="77dp" />

        </androidx.cardview.widget.CardView>
        <include
            layout="@layout/custom_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp" />


    </LinearLayout>
</layout>