<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".search.Flight.Ticket.SuccessfulFlightBookingFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_120sdp"

            android:background="@color/white"
            app:cardCornerRadius="@dimen/_200sdp"
            android:elevation="@dimen/_3sdp"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_main"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_230sdp"
                app:lottie_autoPlay="true"
                android:padding="@dimen/_20sdp"
                app:lottie_loop="true"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/flight_success"
                app:lottie_speed="1" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Successful"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_25sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:text="We will send an email with the flight information and ticket"
            android:layout_gravity="center"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/app_second_color"


            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:background="@drawable/btn_third_color_layout"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:textAllCaps="false"
            android:textSize="@dimen/_19sdp"

            />




    </LinearLayout>
</layout>