<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>



        <!--text view for displaying
            our heading-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/slid1"
            android:weightSum="10"
            >
        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="Skip"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            android:fontFamily="@font/ubuntu_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--text view for displaying our
            slider description-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_bg"
          >

            <TextView
                android:id="@+id/tv_small_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_skip"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="Just second away from"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_light"
                android:textStyle="italic"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_100sdp"
                />

            <TextView
                android:id="@+id/tv_large_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_skip"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/ubuntu_light"
                app:layout_constraintTop_toBottomOf="@id/tv_small_title"
                android:text="A WORLD OF LUXURY"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_32ssp"
              />
        </LinearLayout>
        </LinearLayout>
</layout>