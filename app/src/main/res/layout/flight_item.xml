<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="@dimen/_3sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/flight_country"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="@color/app_second_color"
                    android:text="Mumbai"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/linear_date_price"
                    android:layout_marginEnd="@dimen/_20sdp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_date"

                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:textColor="@color/app_second_color"
                        android:text="2-24 Sep"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_price"

                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/app_second_color"
                        android:text="350$"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_start_end"
                    app:layout_constraintTop_toBottomOf="@id/linear_date_price"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="5">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:id="@+id/flight_start"
                        android:text="11:30"
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:textColor="@color/app_second_color"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:id="@+id/flight_dot"
                        android:text="..............................................................................................."
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:textColor="@color/app_second_color"

                        />

                    <TextView
                        android:id="@+id/flight_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:text="13:30"
                        android:textColor="@color/app_second_color"
                        android:textSize="@dimen/_7sdp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linear_start_end"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/flight_short_name_from"
                        android:text="DBX"
                        android:gravity="center"
                        android:background="@drawable/second_color_btn"
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:textColor="@color/white"
                        android:padding="@dimen/_2sdp"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:id="@+id/flight_duration"
                        android:text="Duration: 02:15 - Direct"
                        android:textSize="@dimen/_7sdp"
                        android:gravity="center"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:textColor="@color/app_second_color_light"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/flight_short_name_to"
                        android:text="BOM"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/ubuntu_light_italic"
                        android:textColor="@color/white"
                        android:background="@drawable/second_color_btn"

                        />


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>