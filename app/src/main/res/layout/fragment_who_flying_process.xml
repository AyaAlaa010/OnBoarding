<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/ticket_top_layout">
    <TextView
        android:id="@+id/tv_ticket_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/who_s_flying"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

        <LinearLayout
            android:id="@+id/linear_process_ticket_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ticket_type">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/one_ProgressIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:indeterminate="false"
                android:indeterminateDuration="@integer/material_motion_duration_long_1"

                android:scrollIndicators="start"
                app:indicatorDirectionLinear="startToEnd"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="@color/app_second_color"

                app:trackCornerRadius="@dimen/_10sdp"
                app:trackThickness="@dimen/_6sdp" />


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/two_ProgressIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="6"
                android:indeterminate="false"

                android:indeterminateDuration="@integer/material_motion_duration_long_1"
                android:scrollIndicators="start"
                app:indicatorDirectionLinear="startToEnd"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="@color/app_color"


                app:trackCornerRadius="@dimen/_10sdp"
                app:trackThickness="@dimen/_6sdp" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/three_linearProgressIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="2"
                android:indeterminate="false"
                android:indeterminateDuration="@integer/material_motion_duration_long_1"
                android:scrollIndicators="start"
                app:indicatorDirectionLinear="startToEnd"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:trackColor="@color/app_second_color"
                app:trackCornerRadius="@dimen/_10sdp"
                app:trackThickness="@dimen/_6sdp" />
        </LinearLayout>
</LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_process_ticket_loading"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_one_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/ubuntu"
                    android:text="One-way • 1 traveler • Sun 20 Nov"
                    android:textColor="@color/app_second_color_light"
                    android:textSize="@dimen/_11sdp"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_country_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Dubai"
                        android:textColor="@color/app_second_color"
                        android:textSize="@dimen/_18sdp"


                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:src="@drawable/right_arrow_icon"
                        android:textColor="@color/app_second_color"

                        />

                    <TextView
                        android:id="@+id/tv_country_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Jeddah"
                        android:textColor="@color/app_second_color"
                        android:textSize="@dimen/_18sdp"


                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who's flying?"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/app_second_color"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_30sdp"
                    android:layout_margin="@dimen/_15sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_details"
                            android:fontFamily="@font/ubuntu_bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/app_second_color"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/required"
                            android:fontFamily="@font/ubuntu_light_italic"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="@color/app_second_color"
                            android:layout_marginTop="@dimen/_3sdp"


                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_email"
                            android:fontFamily="@font/ubuntu"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/app_second_color"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"



                            />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_contact_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/edit_text_layout"
                            android:elevation="@dimen/_2sdp"
                            android:fontFamily="@font/ubuntu_light_italic"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/we_ll_send_your_flight_confirmation_here"
                            android:fontFamily="@font/ubuntu_light_italic"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="center"
                            android:textColor="@color/app_second_color"
                            android:layout_marginBottom="@dimen/_10sdp"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_number"
                            android:fontFamily="@font/ubuntu"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/app_second_color"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"



                            />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/edit_text_layout"
                            android:elevation="@dimen/_2sdp"
                            android:fontFamily="@font/ubuntu_light_italic"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/get_free_text_message_updates_about_your_flight"
                            android:fontFamily="@font/ubuntu_light_italic"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="center"
                            android:textColor="@color/app_second_color"
                            android:drawableStart="@drawable/correct_mark_success_tick_icon"
                            android:layout_marginBottom="@dimen/_10sdp"

                            />





                    </LinearLayout>






                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>
