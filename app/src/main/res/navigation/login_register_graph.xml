<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_register_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.onboarding.registration.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.onboarding.registration.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_successRegisterFragment"
            app:destination="@id/successRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/successRegisterFragment"
        android:name="com.example.onboarding.registration.SuccessRegisterFragment"
        android:label="SuccessRegisterFragment"
        tools:layout="@layout/fragment_success_register"/>
</navigation>